{
  "name": "@swstarter/backend",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node main.ts",
    "run": "node dist/main.js",
    "pretest": "npm run build && cd ../shared && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:unused": "eslint . --rule 'unused-imports/no-unused-imports: error'",
    "lint:import-order": "eslint . --rule 'import/order: error'"
  },
  "_moduleAliases": {
    "@": "./src",
    "@/tests": "./tests"
  },
  "dependencies": {
    "@swstarter/shared": "file:../shared",
    "@types/cors": "^2.8.19",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "axios-mocker": "^1.0.0",
    "eslint": "^9.35.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
